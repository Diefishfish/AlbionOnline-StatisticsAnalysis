<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:StatisticsAnalysisTool.Avalonia.Controls"
        xmlns:viewModels="clr-namespace:StatisticsAnalysisTool.Avalonia.ViewModels"
        mc:Ignorable="d"
        d:DesignHeight="650" d:DesignWidth="800"
        x:DataType="viewModels:MainWindowViewModel"
        Title="AlbionOnline - StatisticsAnalysisTool"
        x:Class="StatisticsAnalysisTool.Avalonia.Views.MainWindow"
        Icon="/Assets/sat-icon.ico"
        Background="Transparent"
        BorderThickness="1,1,1,1"
        CanResize="True"
        TransparencyLevelHint="AcrylicBlur"
        ExtendClientAreaToDecorationsHint="True"
        MinHeight="500"
        MinWidth="1000"
        Height="{Binding Height, Mode=TwoWay}"
        Width="{Binding Width, Mode=TwoWay}"
        WindowState="{Binding WindowState, Mode=TwoWay}">
    <Window.Styles>
        <StyleInclude Source="/Styles/MainWindowStyle.axaml" />
    </Window.Styles>

    <Panel>
        <ExperimentalAcrylicBorder IsHitTestVisible="False">
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial
                    BackgroundSource="Digger"
                    TintColor="#FF0D0F11"
                    TintOpacity="2"
                    MaterialOpacity="0.55" />
            </ExperimentalAcrylicBorder.Material>
        </ExperimentalAcrylicBorder>
        <Grid>
            <Grid ZIndex="-3" Classes="BackgroundImage" />
            <Grid Classes="BackgroundImage" />
            <StackPanel Orientation="Vertical" Margin="0">
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Top" PointerPressed="TopBar_PointerPressed" Background="Transparent">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10,10">
                        <Image Classes="ToolIcon" />
                        <Label ZIndex="-1" Content="AlbionOnline - STATISTICS ANALYSIS TOOL" Classes="Title" />
                        <Grid IsVisible="{Binding IsUnsupportedOs, FallbackValue=false}" Height="20" Width="20" VerticalAlignment="Center">
                            <Button Classes="Hyperlink" ZIndex="1" ToolTip.Tip="UnsupportedOs" />
                            <PathIcon Foreground="{DynamicResource SolidColorBrush.Accent.Red.3}" Data="{DynamicResource fa-triangle-exclamation}"/>
                        </Grid>
                        <Label Content="- DEBUG -" Classes="Title" Foreground="{DynamicResource SolidColorBrush.Accent.Red.3}"
                               IsVisible="{Binding IsDebugMode}" />
                        <Label Content="{Binding ServerTypeText, StringFormat='{}({0})'}" Classes="ContentBold" 
                               Foreground="{DynamicResource SolidColorBrush.Accent.Blue.4}" />

