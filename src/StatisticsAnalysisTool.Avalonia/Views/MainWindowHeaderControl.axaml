<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:StatisticsAnalysisTool.Avalonia.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="80"
             x:Class="StatisticsAnalysisTool.Avalonia.Views.MainWindowHeaderControl"
             x:DataType="viewModels:MainWindowHeaderViewModel">
    <UserControl.Styles>
        <StyleInclude Source="/Styles/MainWindowHeaderStyles.axaml" />
    </UserControl.Styles>
    <Panel>
        <Grid>
            <StackPanel Orientation="Vertical" Margin="0">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10,10">
                        <Image Classes="ToolIcon" />
                        <Label ZIndex="-1" Content="AlbionOnline - STATISTICS ANALYSIS TOOL" Classes="Title" />
                        <Grid IsVisible="{Binding IsUnsupportedOs, FallbackValue=false}" Height="20" Width="20" VerticalAlignment="Center">
                            <Button Classes="Hyperlink" ZIndex="1" ToolTip.Tip="UnsupportedOs" />
                            <PathIcon Foreground="{DynamicResource SolidColorBrush.Accent.Red.3}" Data="{DynamicResource fa-triangle-exclamation}"/>
                        </Grid>
                        <Label Content="- DEBUG -" Classes="Title" Foreground="{DynamicResource SolidColorBrush.Accent.Red.3}" IsVisible="{Binding IsDebugMode}" />
                        <Label Content="{Binding ServerTypeText, StringFormat='{}({0})'}" Classes="ContentBold" Foreground="{DynamicResource SolidColorBrush.Accent.Blue.4}" />

                        <Grid VerticalAlignment="Center" Margin="5,0">
                            <Label Classes="ContentLight" IsVisible="{Binding IsTrackingStatusOn}" Foreground="{DynamicResource SolidColorBrush.Accent.Green.4}" Content="{Binding TrackingActiveText}" />
                            <Label Classes="ContentLight" IsVisible="{Binding IsTrackingStatusOff}" Foreground="{DynamicResource SolidColorBrush.Text.6}" Content="{Binding TrackingActiveText}" />
                            <Label Classes="ContentLight" IsVisible="{Binding IsTrackingStatusPartially}" Foreground="{DynamicResource SolidColorBrush.Accent.Yellow.1}" Content="{Binding TrackingActiveText}" />
                        </Grid>

                        <!--<Grid Style="{StaticResource LoadingIconGridStyle}">
                            <fa5:ImageAwesome Visibility="{Binding LoadIconVisibility}" Style="{StaticResource LoadingIconStyle}" />
                        </Grid>-->
                    </StackPanel>
                </Grid>

