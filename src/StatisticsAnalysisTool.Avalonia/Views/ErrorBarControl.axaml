<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:StatisticsAnalysisTool.Avalonia.ViewModels"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="40"
             x:Class="StatisticsAnalysisTool.Avalonia.Views.ErrorBarControl"
             x:DataType="vm:ErrorBarViewModel">
    <UserControl.Styles>
        <StyleInclude Source="/Styles/ErrorBarStyles.axaml" />
    </UserControl.Styles>
    <Grid ZIndex="3" Classes="ErrorBar" IsVisible="{Binding IsVisible, FallbackValue=false}">
        <Button Classes="Close" Command="{Binding Close}" />
        <Label Classes="ErrorBar" Content="{Binding Text, Mode=OneWay}" />
        <Border BorderThickness="1,0,0,0" BorderBrush="{DynamicResource SolidColorBrush.Accent.Red.1}" />
        <Border BorderThickness="0,1,0,0" BorderBrush="{DynamicResource SolidColorBrush.Accent.Red.1}" />
        <Border BorderThickness="0,0,1,0" BorderBrush="{DynamicResource SolidColorBrush.Accent.Red.5}" />
        <Border BorderThickness="0,0,0,1" BorderBrush="{DynamicResource SolidColorBrush.Accent.Red.5}" />
    </Grid>
</UserControl>