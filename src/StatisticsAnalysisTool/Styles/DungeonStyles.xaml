                                               VerticalAlignment="Center" Width="22" Padding="8,6,0,0" />
                                    </StackPanel>

                                    <!-- Run time -->
                                    <Grid Width="18" Height="24" VerticalAlignment="Center" 
                                          ToolTip="{Binding TranslationRunTime, FallbackValue=RUN__TIME}">
                                        <fa5:ImageAwesome Icon="Regular_Clock" Foreground="{StaticResource SolidColorBrush.Text.1}" />
                                    </Grid>
                                    <Label Height="24" Content="{Binding TotalRunTimeInSeconds, IsAsync=True, FallbackValue=00:00:00, Converter={StaticResource SecondsToTimeFormatConverter}}" Width="60" />
                                </StackPanel>

                                <!-- Delete checkbox -->
                                <Grid Margin="0,0,10,0" Height="18" Width="18" HorizontalAlignment="Right">
                                    <CheckBox IsChecked="{Binding IsSelectedForDeletion}" ToolTip="{Binding TranslationSelectToDelete}" />
                                </Grid>
                            </StackPanel>

                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal" Height="24">
                                    <Label Width="150" VerticalAlignment="Center" Foreground="{StaticResource SolidColorBrush.Text.1}">
                                        <Label.Content>
                                            <TextBlock>
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0}" ConverterCulture="{x:Static com:LanguageController.CurrentCultureInfo}">
                                                        <Binding Path="EnterDungeonFirstTime" FallbackValue="00.00.0000 00:00:00" />
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </Label.Content>
                                    </Label>

                                    <!-- Main cluster name + icon -->
                                    <ContentPresenter ContentTemplate="{StaticResource DungeonFragment.ClusterTypeIcon.Template}" Content="{Binding}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <StackPanel Orientation="Vertical" Margin="0,2" Width="150">
                                        <!-- Fame -->
                                        <DockPanel Height="16">
                                            <Grid HorizontalAlignment="Center" Width="20" Margin="0,0,2,0" VerticalAlignment="Center" ToolTip="{Binding TranslationFame, FallbackValue=FAME}">
                                                <Image Source="../Resources/fame.png" />
                                            </Grid>
                                            <DockPanel>
                                                <TextBlock Text="{Binding Fame, Converter={StaticResource ShortNumberConverter}, 
                                                        ConverterCulture={x:Static glob:CultureInfo.CurrentCulture}, IsAsync=True, Mode=OneWay, FallbackValue=-}" 
                                                    Foreground="{StaticResource SolidColorBrush.Text.1}" TextAlignment="Right" />
                                                <TextBlock Text="/" Foreground="{StaticResource SolidColorBrush.Accent.Blue.2}" FontWeight="Bold" Margin="2,0,2,0" />
                                                <TextBlock Text="{Binding FamePerHour, Converter={StaticResource ShortNumberConverter}, 
                                                        ConverterCulture={x:Static glob:CultureInfo.CurrentCulture}, IsAsync=True, Mode=OneWay, StringFormat='{}{0:N0}/h', FallbackValue=-}" 
                                                           Foreground="{StaticResource SolidColorBrush.Text.1}" TextAlignment="Left" />
                                            </DockPanel>
                                        </DockPanel>
                                        <!-- ReSpec -->
                                        <DockPanel Height="16">
                                            <Grid HorizontalAlignment="Center" Width="20" Margin="0,0,2,0" VerticalAlignment="Center" ToolTip="{Binding TranslationReSpec, FallbackValue=RESPEC}">
                                                <Image Source="../Resources/respec.png" />
                                            </Grid>
                                            <DockPanel>
                                                <TextBlock Text="{Binding ReSpec, Converter={StaticResource ShortNumberConverter}, 
                                                        ConverterCulture={x:Static glob:CultureInfo.CurrentCulture}, IsAsync=True, Mode=OneWay, FallbackValue=-}" 
                                                           Foreground="{StaticResource SolidColorBrush.Text.1}" TextAlignment="Right" />
                                                <TextBlock Text="/" Foreground="{StaticResource SolidColorBrush.Accent.Blue.2}" FontWeight="Bold" Margin="2,0,2,0" />
                                                <TextBlock Text="{Binding ReSpecPerHour, Converter={StaticResource ShortNumberConverter}, 
                                                        ConverterCulture={x:Static glob:CultureInfo.CurrentCulture}, IsAsync=True, Mode=OneWay, StringFormat='{}{0:N0}/h', FallbackValue=-}" 
                                                           Foreground="{StaticResource SolidColorBrush.Text.1}" TextAlignment="Left" />
                                            </DockPanel>
                                        </DockPanel>
                                        <!-- Silver -->
                                        <DockPanel Height="16">
                                            <Grid HorizontalAlignment="Center" Width="20" Margin="0,0,2,0" VerticalAlignment="Center" ToolTip="{Binding TranslationSilver, FallbackValue=SILVER}">
                                                <Image Source="../Resources/silver.png" />
                                            </Grid>
                                            <DockPanel>
                                                <TextBlock Text="{Binding Silver, Converter={StaticResource ShortNumberConverter}, 
                                                        ConverterCulture={x:Static glob:CultureInfo.CurrentCulture}, IsAsync=True, Mode=OneWay, FallbackValue=-}" 
                                                           Foreground="{StaticResource SolidColorBrush.Text.1}" TextAlignment="Right" />
                                                <TextBlock Text="/" Foreground="{StaticResource SolidColorBrush.Accent.Blue.2}" FontWeight="Bold" Margin="2,0,2,0" />
                                                <TextBlock Text="{Binding SilverPerHour, Converter={StaticResource ShortNumberConverter}, 
                                                        ConverterCulture={x:Static glob:CultureInfo.CurrentCulture}, IsAsync=True, Mode=OneWay, StringFormat='{}{0:N0}/h', FallbackValue=-}" 
                                                           Foreground="{StaticResource SolidColorBrush.Text.1}" TextAlignment="Left" />
                                            </DockPanel>
                                        </DockPanel>

                                        <!-- Point of interest -->
                                        <StackPanel Orientation="Vertical">
                                            <Grid Margin="0,0,20,0" Height="22">
                                                <StackPanel Orientation="Horizontal" MinWidth="210">
                                                    <ItemsControl ItemsSource="{Binding Events, IsAsync=True}" ItemTemplate="{StaticResource Dungeon.Poi.Template}">
                                                        <ItemsControl.ItemsPanel>
                                                            <ItemsPanelTemplate>
                                                                <UniformGrid Rows="1"/>
                                                            </ItemsPanelTemplate>
                                                        </ItemsControl.ItemsPanel>
                                                    </ItemsControl>
                                                </StackPanel>
                                            </Grid>
                                        </StackPanel>
                                    </StackPanel>

                                    <StackPanel Orientation="Vertical" Margin="0,2" Width="150">
                                        <!-- Might -->
                                        <DockPanel Height="16" Visibility="{Binding MightFavorVisibility, IsAsync=True, FallbackValue=Collapsed}">
                                            <Grid HorizontalAlignment="Center" Width="20" Margin="0,0,2,0" VerticalAlignment="Center" ToolTip="{Binding TranslationMight, FallbackValue=MIGHT}">
                                                <Image Source="../Resources/might.png" />
                                            </Grid>
                                            <DockPanel>
                                                <TextBlock Text="{Binding Might, Converter={StaticResource ShortNumberConverter}, 
                                                        ConverterCulture={x:Static glob:CultureInfo.CurrentCulture}, IsAsync=True, Mode=OneWay, FallbackValue=-}" 
                                                    Foreground="{StaticResource SolidColorBrush.Text.1}" TextAlignment="Right">
                                                    <TextBlock.ToolTip>
                                                        <ToolTip Content="{Binding Might}" ContentStringFormat="{}{0:N0}" />
                                                    </TextBlock.ToolTip>
                                                </TextBlock>
                                                <TextBlock Text="/" Foreground="{StaticResource SolidColorBrush.Accent.Blue.2}" FontWeight="Bold" Margin="2,0,2,0" />
                                                <TextBlock Text="{Binding MightPerHour, Converter={StaticResource ShortNumberConverter}, 
                                                        ConverterCulture={x:Static glob:CultureInfo.CurrentCulture}, IsAsync=True, Mode=OneWay, StringFormat='{}{0:N0}/h', FallbackValue=-}" 
                                                           Foreground="{StaticResource SolidColorBrush.Text.1}" TextAlignment="Left" />
                                            </DockPanel>
                                        </DockPanel>
                                        <!-- Favor -->
                                        <DockPanel Height="16" Visibility="{Binding MightFavorVisibility, IsAsync=True, FallbackValue=Collapsed}">
                                            <Grid HorizontalAlignment="Center" Width="20" Margin="0,0,2,0" VerticalAlignment="Center" ToolTip="{Binding TranslationFavor, FallbackValue=FAVOR}">
                                                <Image Source="../Resources/favor.png" />
                                            </Grid>
                                            <DockPanel>
                                                <TextBlock Text="{Binding Favor, Converter={StaticResource ShortNumberConverter}, 
                                                        ConverterCulture={x:Static glob:CultureInfo.CurrentCulture}, IsAsync=True, Mode=OneWay, FallbackValue=-}" 
                                                           Foreground="{StaticResource SolidColorBrush.Text.1}" TextAlignment="Right" />
                                                <TextBlock Text="/" Foreground="{StaticResource SolidColorBrush.Accent.Blue.2}" FontWeight="Bold" Margin="2,0,2,0" />
                                                <TextBlock Text="{Binding FavorPerHour, Converter={StaticResource ShortNumberConverter}, 
                                                        ConverterCulture={x:Static glob:CultureInfo.CurrentCulture}, IsAsync=True, Mode=OneWay, StringFormat='{}{0:N0}/h', FallbackValue=-}" 
                                                           Foreground="{StaticResource SolidColorBrush.Text.1}" TextAlignment="Left" />
                                            </DockPanel>
                                        </DockPanel>

                                        <!-- Faction coins -->
                                        <DockPanel Height="16" Visibility="{Binding FactionPointsVisibility, IsAsync=True, FallbackValue=Collapsed}">
                                            <Grid HorizontalAlignment="Center" Margin="0,0,2,0" VerticalAlignment="Center" ToolTip="{Binding TranslationFactionCoins, FallbackValue=FACTION__COINS}">
                                                <Image Style="{StaticResource Tracker.Fraction.Coin.Icon}" />
                                            </Grid>
                                            <DockPanel>
                                                <TextBlock Text="{Binding FactionCoins, Converter={StaticResource ShortNumberConverter}, 
                                                        ConverterCulture={x:Static glob:CultureInfo.CurrentCulture}, IsAsync=True, Mode=OneWay, FallbackValue=-}" 
                                                           Foreground="{StaticResource SolidColorBrush.Text.1}" TextAlignment="Right" />
                                                <TextBlock Text="/" Foreground="{StaticResource SolidColorBrush.Accent.Blue.2}" FontWeight="Bold" Margin="2,0,2,0" />
                                                <TextBlock Text="{Binding FactionCoinsPerHour, Converter={StaticResource ShortNumberConverter}, 
                                                        ConverterCulture={x:Static glob:CultureInfo.CurrentCulture}, IsAsync=True, Mode=OneWay, StringFormat='{}{0:N0}/h', FallbackValue='-/h'}" 
                                                           Foreground="{StaticResource SolidColorBrush.Text.1}" TextAlignment="Left" />
                                            </DockPanel>
                                        </DockPanel>
                                        <!-- Faction flags -->
                                        <DockPanel Height="16" Visibility="{Binding FactionPointsVisibility, IsAsync=True, FallbackValue=Collapsed}">
                                            <Grid HorizontalAlignment="Center" Width="16" Margin="0,0,2,0" VerticalAlignment="Center" ToolTip="{Binding TranslationFactionFlags, FallbackValue=FACTION__FLAGS}">
                                                <Image Style="{StaticResource Tracker.Fraction.Flag.Icon}" />
                                            </Grid>
                                            <DockPanel>
                                                <TextBlock Text="{Binding FactionFlags, Converter={StaticResource ShortNumberConverter}, 
                                                        ConverterCulture={x:Static glob:CultureInfo.CurrentCulture}, IsAsync=True, Mode=OneWay, FallbackValue=-}" 
                                                           Foreground="{StaticResource SolidColorBrush.Text.1}" TextAlignment="Right" />
                                                <TextBlock Text="/" Foreground="{StaticResource SolidColorBrush.Accent.Blue.2}" FontWeight="Bold" Margin="2,0,2,0" />
                                                <TextBlock Text="{Binding FactionFlagsPerHour, Converter={StaticResource ShortNumberConverter}, 
                                                        ConverterCulture={x:Static glob:CultureInfo.CurrentCulture}, IsAsync=True, Mode=OneWay, StringFormat='{}{0:N0}/h', FallbackValue='-/h'}" 
                                                           Foreground="{StaticResource SolidColorBrush.Text.1}" TextAlignment="Left" />
                                            </DockPanel>
                                        </DockPanel>
                                    </StackPanel>

                                    <StackPanel Orientation="Vertical" Margin="0,2">
                                        <!-- Total value -->
                                        <StackPanel Orientation="Horizontal" Height="20">
                                            <Grid HorizontalAlignment="Center" Width="20" Margin="0,0,2,0" VerticalAlignment="Center" ToolTip="{Binding TranslationTotalLootedValue, FallbackValue=TOTAL_LOOTED_VALUE}">
                                                <Image Source="../Assets/static_chest.png" />
                                            </Grid>
                                            <DockPanel>
                                                <TextBlock Text="{Binding TotalValue, ConverterCulture={x:Static glob:CultureInfo.CurrentCulture}, StringFormat='{}{0:N0}', IsAsync=True, Mode=OneWay, FallbackValue=-}" 
                                                           Foreground="{StaticResource SolidColorBrush.Text.1}" TextAlignment="Right" />
                                                <TextBlock Margin="2,0,2,0" />
                                                <TextBlock Foreground="{StaticResource SolidColorBrush.Text.1}" TextAlignment="Left" />
                                            </DockPanel>
                                        </StackPanel>

                                        <!-- Most valuable loot -->
                                        <StackPanel Orientation="Horizontal" Height="30" Margin="-6,-2,0,0" Visibility="{Binding MostValuableLootVisibility}">
                                            <Image Source="{Binding MostValuableLoot.Item.Icon, IsAsync=True}" Height="34" ToolTip="{Binding TranslationMostValuableLoot}" />
                                            <StackPanel Orientation="Vertical" Height="32" Width="200">
                                                <TextBlock Padding="0" Text="{Binding MostValuableLoot.Item.LocalizedName, IsAsync=True}" 
                                                           Foreground="{StaticResource SolidColorBrush.Text.1}" />
                                                <TextBlock Padding="0" Text="{Binding MostValuableLoot.EstimatedMarketValue.DoubleValue, StringFormat='{}{0:N0}', IsAsync=True}" 
                                                           Foreground="{StaticResource SolidColorBrush.Accent.Blue.2}" />
                                            </StackPanel>
                                        </StackPanel>

                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </DockPanel>
                </StackPanel>
            </Grid>
        </Border>
    </DataTemplate>

