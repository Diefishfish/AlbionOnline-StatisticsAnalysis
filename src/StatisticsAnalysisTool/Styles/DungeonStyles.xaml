                        <Grid Height="40" Width="40" ToolTip="{Binding Translation.EnteredDungeon}">
                            <Image Source="/Assets/dungeon.png" Height="32" Width="32" />
                        </Grid>
                        <TextBlock Text="{Binding DungeonStatsSelection.EnteredDungeon, StringFormat='{}{0:N0}', FallbackValue=0}" Style="{StaticResource Dungeons.Stats.Numbers}" />
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Vertical" Margin="0,0,25,0">
                    <TextBlock Text="{Binding Translation.ChestStats, IsAsync=True, FallbackValue=CHEST_STATS}" FontSize="16" 
                               Foreground="{StaticResource SolidColorBrush.Text.1}" HorizontalAlignment="Center" />
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Orientation="Vertical" Margin="5,0">
                            <Grid Height="40" Width="40" ToolTip="{Binding Translation.OpenedStandardChests}">
                                <Image Source="/Assets/static_chest.png" Height="26" Width="26" />
                                <Image Source="/Assets/green_glow.png" Height="40" Width="40" Opacity="0.4" />
                            </Grid>
                            <TextBlock Text="{Binding DungeonStatsSelection.OpenedStandardChests, StringFormat='{}{0:N0}', FallbackValue=0}" Style="{StaticResource Dungeons.Stats.Numbers}" />
                        </StackPanel>
                        <StackPanel Orientation="Vertical" Margin="5,0">
                            <Grid Height="40" Width="40" ToolTip="{Binding Translation.OpenedUncommonChests}">
