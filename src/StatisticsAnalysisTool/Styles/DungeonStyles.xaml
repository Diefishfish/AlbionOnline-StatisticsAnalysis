    <DataTemplate x:Key="RandomDungeonTemplate" DataType="{x:Type dungeonModels:RandomDungeonFragment}">
        <Border BorderBrush="{StaticResource SolidColorBrush.Background.2}" BorderThickness="0,0,0,1">
            <Grid Style="{StaticResource Fragment.Activity}">
                <StackPanel Orientation="Vertical" Style="{StaticResource DungeonFragment.Faction}">
                    <DockPanel>
                        <Grid HorizontalAlignment="Left" Style="{StaticResource DungeonFragment.Grid.DungeonMode}" />
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <ContentPresenter ContentTemplate="{StaticResource DungeonFragment.MapTypeIcon.Template}" Content="{Binding}" />
                            <TextBlock Style="{StaticResource Fragment.TierLevel}">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}T{0}{1}">
                                        <Binding Path="Tier" FallbackValue="?" Converter="{StaticResource EnumToIntOrQuestionMarkConverter}" IsAsync="True" />
                                        <Binding Path="LevelString" FallbackValue="?" IsAsync="True" />
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </StackPanel>
                        <Grid Height="96">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Top">
                                <StackPanel Orientation="Horizontal">
                                    <!-- Number of floors -->
                                    <StackPanel Orientation="Horizontal">
                                        <fa5:ImageAwesome Icon="Solid_Dungeon" Foreground="{StaticResource SolidColorBrush.Text.1}" Height="18" 
                                                          ToolTip="{Binding TranslationNumberOfDungeonFloors, FallbackValue=NUMBER__OF__DUNGEON__FLOORS}" />
