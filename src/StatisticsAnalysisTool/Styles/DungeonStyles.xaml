    <DataTemplate x:Key="DungeonStatsTemplate" DataType="{x:Type models:DungeonStats}">
        <Grid>
            <DockPanel HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10">
                <StackPanel Orientation="Vertical" Margin="10,0,10,0">
                    <Image Source="../Resources/fame.png" Width="22" Height="22" ToolTip="{Binding TranslationFame, FallbackValue=FAME}" />
                    <TextBlock Text="{Binding Fame, StringFormat='{}{0:N0}', FallbackValue=0}" Style="{StaticResource Dungeons.Stats.Value}" />
                    <TextBlock Text="{Binding FamePerHour, Converter={StaticResource ValuePerHourConverter}, FallbackValue=0 /h}" Style="{StaticResource Dungeons.Stats.Value}" />
                    <TextBlock Text="{Binding FameAverage, Converter={StaticResource ValueAvgConverter}, FallbackValue=0 .Avg}" Style="{StaticResource Dungeons.Stats.Value}" Margin="0,0,0,5" />
                </StackPanel>
                <StackPanel Orientation="Vertical" Margin="10,0,10,0">
                    <Image Source="../Resources/silver.png" Width="22" Height="22" ToolTip="{Binding TranslationSilver, FallbackValue=SILVER}" />
                    <TextBlock Text="{Binding Silver, StringFormat='{}{0:N0}', FallbackValue=0}" Style="{StaticResource Dungeons.Stats.Value}" />
                    <TextBlock Text="{Binding SilverPerHour, Converter={StaticResource ValuePerHourConverter}, FallbackValue=0 /h}" Style="{StaticResource Dungeons.Stats.Value}" />
                    <TextBlock Text="{Binding SilverAverage, Converter={StaticResource ValueAvgConverter}, FallbackValue=0 .Avg}" Style="{StaticResource Dungeons.Stats.Value}" Margin="0,0,0,5" />
                </StackPanel>
                <StackPanel Orientation="Vertical" Margin="10,0,10,0">
                    <Image Source="../Resources/respec.png" Width="22" Height="22" ToolTip="{Binding TranslationReSpec, FallbackValue=RESPEC}" />
                    <TextBlock Text="{Binding ReSpec, StringFormat='{}{0:N0}', FallbackValue=0}" Style="{StaticResource Dungeons.Stats.Value}" />
                    <TextBlock Text="{Binding ReSpecPerHour, Converter={StaticResource ValuePerHourConverter}, FallbackValue=0 /h}" Style="{StaticResource Dungeons.Stats.Value}" />
                    <TextBlock Text="{Binding ReSpecAverage, Converter={StaticResource ValueAvgConverter}, FallbackValue=0 .Avg}" Style="{StaticResource Dungeons.Stats.Value}" Margin="0,0,0,5" />
                </StackPanel>
                <StackPanel Orientation="Vertical" Margin="10,0,10,0">
                    <Image Source="../Resources/might.png" Width="22" Height="22" ToolTip="{Binding TranslationMight, FallbackValue=MIGHT}" />
                    <TextBlock Text="{Binding Might, StringFormat='{}{0:N0}', FallbackValue=0}" Style="{StaticResource Dungeons.Stats.Value}" />
                    <TextBlock Text="{Binding MightPerHour, Converter={StaticResource ValuePerHourConverter}, FallbackValue=0 /h}" Style="{StaticResource Dungeons.Stats.Value}" />
                    <TextBlock Text="{Binding MightAverage, Converter={StaticResource ValueAvgConverter}, FallbackValue=0 .Avg}" Style="{StaticResource Dungeons.Stats.Value}" Margin="0,0,0,5" />
                </StackPanel>
                <StackPanel Orientation="Vertical" Margin="10,0,10,0">
                    <Image Source="../Resources/favor.png" Width="22" Height="22" ToolTip="{Binding TranslationFavor, FallbackValue=FAVOR}" />
                    <TextBlock Text="{Binding Favor, StringFormat='{}{0:N0}', FallbackValue=0}" Style="{StaticResource Dungeons.Stats.Value}" />
                    <TextBlock Text="{Binding FavorPerHour, Converter={StaticResource ValuePerHourConverter}, FallbackValue=0 /h}" Style="{StaticResource Dungeons.Stats.Value}" />
                    <TextBlock Text="{Binding FavorAverage, Converter={StaticResource ValueAvgConverter}, FallbackValue=0 .Avg}" Style="{StaticResource Dungeons.Stats.Value}" Margin="0,0,0,5" />
                </StackPanel>
            </DockPanel>
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="DungeonGeneralStatsTemplate" DataType="{x:Type bindingModel:DungeonBindings}">
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="{Binding Translation.DungeonStats, FallbackValue=DUNGEON_STATS}" FontSize="16" Foreground="{StaticResource SolidColorBrush.Text.1}" HorizontalAlignment="Center" />
                    <DockPanel HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10">
                        <StackPanel Orientation="Vertical" Margin="10,0,10,0">
                            <Image Source="../Resources/fame.png" Width="22" Height="22" ToolTip="{Binding DungeonStatsSelection.TranslationFame, FallbackValue=FAME}" />
                            <TextBlock Text="{Binding DungeonStatsSelection.Fame, Converter={StaticResource ShortNumberConverter}, ConverterCulture={x:Static glob:CultureInfo.CurrentCulture}, FallbackValue=0}" Style="{StaticResource Dungeons.Stats.Value}"/>
                            <TextBlock Text="{Binding DungeonStatsSelection.FamePerHour, Converter={StaticResource ValuePerHourConverter}, FallbackValue=0 /h}" Style="{StaticResource Dungeons.Stats.Value}" />
                            <TextBlock Text="{Binding DungeonStatsSelection.FameAverage, Converter={StaticResource ValueAvgConverter}, FallbackValue=0 .Avg}" Style="{StaticResource Dungeons.Stats.Value}" Margin="0,0,0,5" />
                        </StackPanel>
                        <StackPanel Orientation="Vertical" Margin="10,0,10,0">
                            <Image Source="../Resources/silver.png" Width="22" Height="22" ToolTip="{Binding DungeonStatsSelection.TranslationSilver, FallbackValue=SILVER}" />
                            <TextBlock Text="{Binding DungeonStatsSelection.Silver, Converter={StaticResource ShortNumberConverter}, ConverterCulture={x:Static glob:CultureInfo.CurrentCulture}, FallbackValue=0}" Style="{StaticResource Dungeons.Stats.Value}" />
                            <TextBlock Text="{Binding DungeonStatsSelection.SilverPerHour, Converter={StaticResource ValuePerHourConverter}, FallbackValue=0 /h}" Style="{StaticResource Dungeons.Stats.Value}" />
                            <TextBlock Text="{Binding DungeonStatsSelection.SilverAverage, Converter={StaticResource ValueAvgConverter}, FallbackValue=0 .Avg}" Style="{StaticResource Dungeons.Stats.Value}" Margin="0,0,0,5" />
                        </StackPanel>
                        <StackPanel Orientation="Vertical" Margin="10,0,10,0">
                            <Image Source="../Resources/respec.png" Width="22" Height="22" ToolTip="{Binding DungeonStatsSelection.TranslationReSpec, FallbackValue=RESPEC}" />
                            <TextBlock Text="{Binding DungeonStatsSelection.ReSpec, Converter={StaticResource ShortNumberConverter}, ConverterCulture={x:Static glob:CultureInfo.CurrentCulture}, FallbackValue=0}" Style="{StaticResource Dungeons.Stats.Value}" />
                            <TextBlock Text="{Binding DungeonStatsSelection.ReSpecPerHour, Converter={StaticResource ValuePerHourConverter}, FallbackValue=0 /h}" Style="{StaticResource Dungeons.Stats.Value}" />
                            <TextBlock Text="{Binding DungeonStatsSelection.ReSpecAverage, Converter={StaticResource ValueAvgConverter}, FallbackValue=0 .Avg}" Style="{StaticResource Dungeons.Stats.Value}" Margin="0,0,0,5" />
                        </StackPanel>
                        <StackPanel Orientation="Vertical" Margin="10,0,10,0">
                            <Image Source="../Resources/might.png" Width="22" Height="22" ToolTip="{Binding DungeonStatsSelection.TranslationMight, FallbackValue=MIGHT}" />
                            <TextBlock Text="{Binding DungeonStatsSelection.Might, Converter={StaticResource ShortNumberConverter}, ConverterCulture={x:Static glob:CultureInfo.CurrentCulture}, FallbackValue=0}" Style="{StaticResource Dungeons.Stats.Value}" />
                            <TextBlock Text="{Binding DungeonStatsSelection.MightPerHour, Converter={StaticResource ValuePerHourConverter}, FallbackValue=0 /h}" Style="{StaticResource Dungeons.Stats.Value}" />
                            <TextBlock Text="{Binding DungeonStatsSelection.MightAverage, Converter={StaticResource ValueAvgConverter}, FallbackValue=0 .Avg}" Style="{StaticResource Dungeons.Stats.Value}" Margin="0,0,0,5" />
                        </StackPanel>
                        <StackPanel Orientation="Vertical" Margin="10,0,10,0">
                            <Image Source="../Resources/favor.png" Width="22" Height="22" ToolTip="{Binding DungeonStatsSelection.TranslationFavor, FallbackValue=FAVOR}" />
                            <TextBlock Text="{Binding DungeonStatsSelection.Favor, Converter={StaticResource ShortNumberConverter}, ConverterCulture={x:Static glob:CultureInfo.CurrentCulture}, FallbackValue=0}" Style="{StaticResource Dungeons.Stats.Value}" />
                            <TextBlock Text="{Binding DungeonStatsSelection.FavorPerHour, Converter={StaticResource ValuePerHourConverter}, FallbackValue=0 /h}" Style="{StaticResource Dungeons.Stats.Value}" />
                            <TextBlock Text="{Binding DungeonStatsSelection.FavorAverage, Converter={StaticResource ValueAvgConverter}, FallbackValue=0 .Avg}" Style="{StaticResource Dungeons.Stats.Value}" Margin="0,0,0,5" />
                        </StackPanel>
                        <StackPanel Orientation="Vertical" Margin="10,0,10,0">
                            <Image Source="../Assets/bag.png" Width="22" Height="22" ToolTip="{Binding DungeonStatsSelection.TranslationLootInSilver, FallbackValue='LOOT_IN_SILVER'}" />
                            <TextBlock Text="{Binding DungeonStatsSelection.LootInSilver, Converter={StaticResource ShortNumberConverter}, ConverterCulture={x:Static glob:CultureInfo.CurrentCulture}, FallbackValue=0}" Style="{StaticResource Dungeons.Stats.Value}" />
                            <TextBlock Text="{Binding DungeonStatsSelection.LootInSilverPerHour, Converter={StaticResource ValuePerHourConverter}, FallbackValue=0 /h}" Style="{StaticResource Dungeons.Stats.Value}" />
                            <TextBlock Text="{Binding DungeonStatsSelection.LootInSilverAverage, Converter={StaticResource ValueAvgConverter}, FallbackValue=0 .Avg}" Style="{StaticResource Dungeons.Stats.Value}" Margin="0,0,0,5" />
                        </StackPanel>
                    </DockPanel>
                </StackPanel>
            </StackPanel>

            <Separator Background="{StaticResource SolidColorBrush.Background.3}" Height="4" Margin="0,2,0,2" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
